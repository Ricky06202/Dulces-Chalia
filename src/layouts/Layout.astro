---
// src/layouts/Layout.astro
import '../styles/global.css' // Asegúrate de tener este archivo para las directivas de Tailwind
const { title = 'Dulces Chalia - Repostería Artesanal' } = Astro.props
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body class="bg-amber-50 text-gray-800 font-sans">
    <slot />
    <footer class="text-center py-6 border-t border-amber-200">
      <p class="text-sm">
        &copy; {new Date().getFullYear()} Dulces Chalia. Repostería con amor.
      </p>
    </footer>
  </body>
</html>
