        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 md:gap-6">
            {images.map((img, index) => (
                <div class="aspect-square overflow-hidden rounded-lg shadow-lg hover:shadow-xl transition-shadow duration-300 transform hover:scale-[1.02]">
                    <img 
                        src={img.default.src} 
                        alt={`Dulces Chalia ${index + 1}`} 
                        class="w-full h-full object-cover"
                        loading="lazy"
                    />
                </div>
            ))}
